---
import Button from "../ui/Button";
import { Image } from "astro:assets";
import IntroImage from "../../assets/images/home/intro.png";
import ElementImage from "../../assets/images/home/element.png";
---

<section class="relative w-full max-w-[1800px] mx-auto">
  <Image src={ElementImage} class="top-1 left-1 absolute" alt="element image" />
  <div
    class="container mx-auto flex items-center justify-between min-h-[78vh] pt-10"
  >
    <div class="max-w-screen-sm">
      <h1 class="text-5xl font-semibold  py-2">Virtual healthcare</h1>
      <h1 class="text-5xl font-semibold  py-2">for you</h1>
      <p class="text-gray-600 py-4 w-full max-w-[400px]">
        Trafalgar provides progressive, and affordable healthcare, accessible on
        mobile and online for everyone
      </p>
      <Button client:load className="my-10 font-bold py-4">Consult today</Button
      >
    </div>
    <div>
      <Image alt="intro image" src={IntroImage} />
    </div>
  </div>
</section>
